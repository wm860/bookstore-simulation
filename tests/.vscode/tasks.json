{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe kompiluj aktywny plik",
            // "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                //Wersja dla Windowsa:
                // "${workspaceFolder}\\*.cpp",
                // trzeba również dołączyć pliki znajdujące się "poziom wyżej", ale bez funkcji main (dlatego nie ma tu ..\\*.cpp, tylko wskazany jest konkretny plik)
                // "${workspaceFolder}\\..\\adder.cpp",
                // "-o",
                // "${workspaceFolder}\\${workspaceFolderBasename}.exe",
                //Wersja dla Linuxa:
                "${workspaceFolder}/*.cpp",
                //trzeba również dołączyć pliki znajdujące się "poziom wyżej", ale bez funkcji main (dlatego nie ma tu ../*.cpp, tylko wskazany jest konkretny plik)
                "${workspaceFolder}/../file_operation.cpp",
                "${workspaceFolder}/../book.cpp",
                "${workspaceFolder}/../bookcollection.cpp",
                "${workspaceFolder}/../ebook.cpp",
                "${workspaceFolder}/../magazine.cpp",
                "${workspaceFolder}/../client.cpp",
                "${workspaceFolder}/../seller.cpp",
                "${workspaceFolder}/../sellers_list.cpp",
                "${workspaceFolder}/../clients_list.cpp",
                "${workspaceFolder}/../exception_negative_price.cpp",
                "${workspaceFolder}/../already_existing_client_exception.cpp",
                "${workspaceFolder}/../already_existing_seller_exception.cpp",
                "${workspaceFolder}/../book_not_found_exception.cpp",
                "${workspaceFolder}/../client_not_found_exception.cpp",
                "${workspaceFolder}/../seller_not_found_exception.cpp",
                //"${workspaceFolder}/../exception_negative_price.cpp",
                "-o",
                "${workspaceFolder}/${workspaceFolderBasename}",
                "-Wall",
                "-Werror"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Zadanie wygenerowane przez debuger."
        }
    ],
    "version": "2.0.0"
}